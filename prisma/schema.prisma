generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User ====================================================================================================

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  phone      String   @unique
  firstName  String
  surname    String
  patronymic String
  country    String?
  region     String?
  settlement String?
  avatar     String?
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

// Post ====================================================================================================

model Post {
  id        Int      @id @default(autoincrement())
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id   Int    @id @default(autoincrement())
  path String
}

model Banner {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
