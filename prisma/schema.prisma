generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User ====================================================================================================

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  phone       String   @unique
  firstName   String
  surname     String
  patronymic  String
  country     String?
  region      String?
  settlement  String?
  avatar      String?
  ban         Boolean?
  banResponse String?
  role        Role     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

// Banner ====================================================================================================

model Banner {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  src         String
  alt         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// GelPolishes

model GelPolishes {
  id        Int                @id @default(autoincrement())
  title     String
  imageSrc  String
  imageAlt  String
  discount  Boolean            @default(false)
  publish   Boolean            @default(false)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  prices    PriceGelPolishes[]
  sizes     SizeGelPolishes[]
}

model SizeGelPolishes {
  id          Int         @id @default(autoincrement())
  size        String
  gelPolishId Int
  gelPolish   GelPolishes @relation(fields: [gelPolishId], references: [id])
}

model PriceGelPolishes {
  id          Int         @id @default(autoincrement())
  price       String
  gelPolishId Int
  gelPolish   GelPolishes @relation(fields: [gelPolishId], references: [id])
}

// Post ====================================================================================================

model Post {
  id        Int      @id @default(autoincrement())
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id   Int    @id @default(autoincrement())
  path String
}
